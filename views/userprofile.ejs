<%- include('partials/header.ejs') %>
<!-- content start -->

<div class="main">
  <div class="d-flex head">
    <h2 class="heading"><i class="bi bi-arrow-left-short"></i>User Profile</h2>
  </div>

  <div class="content">
    <div style="overflow-y: auto">
      <table
        id="roles"
        class="table table-striped add-button"
        style="width: 100%"
      >
        <thead>
          <tr>
            <th class="text-center" style="border-radius: 30px 0px 0px 0px">
              Sr. No.
            </th>
            <th class="text-center">User Name</th>
            <th class="text-center">Role</th>
            <th class="text-center" style="border-radius: 0px 30px 0px 0px">
              User Inherited Roles
            </th>
          </tr>
        </thead>

        <tbody>
          <% if (!employees || employees.length === 0) { %> <% } else { %> <%
          employees.forEach((employee, index) => { %>
          <tr>
            <td class="text-center" width="15%"><%= index + 1 %></td>
            <td class="text-center" width="15%">
              <%= employee.firstname %> <%= employee.lastname %>
            </td>
            <td class="text-center" width="15%"><%= employee.department %></td>
            <td class="text-center" width="15%"><%= employee.inherits %></td>
          </tr>
          <% }); %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include ('partials/footer.ejs') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap5-toggle@5.0.4/js/bootstrap5-toggle.ecmas.min.js"></script>
