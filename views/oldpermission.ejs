<%- include('partials/header.ejs') %>
<!-- content start -->

<div class="main">
  <div class="d-flex head">
    <h2 class="heading">
      <i class="bi bi-arrow-left-short"></i> Role List With Permission
    </h2>
  </div>

  <div class="content">
    <div style="overflow-y: auto">
      <table
        id="roles"
        class="table table-striped add-button"
        style="width: 100%"
      >
        <thead>
          <tr>
            <th class="text-center" style="border-radius: 30px 0px 0px 0px">
              Sr. No.
            </th>
            <th class="text-center">Role Name</th>
            <th class="text-center" style="border-radius: 0px 30px 0px 0px">
              Action
            </th>
          </tr>
        </thead>

        <tbody>
          <% if (!resources || resources.length===0) { %>
          <tr>
            <td colspan="3" class="text-center">No data available</td>
          </tr>
          <% } else { %> <% var counter=1; %> <% resources.forEach((data)=> { %>
          <tr>
            <td class="text-center" width="5%"><%= counter++ %></td>
            <td class="text-center" width="15%"><%= data.role_name %></td>
            <td class="text-center" width="15%">
              <a
                href="/resourcesview?role=<%= data.role_name %>"
                style="color: azure"
                ><button class="viewbBtn">View</button></a
              >
            </td>
          </tr>
          <% }); %> <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include ('partials/footer.ejs') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap5-toggle@5.0.4/js/bootstrap5-toggle.ecmas.min.js"></script>
</div>
